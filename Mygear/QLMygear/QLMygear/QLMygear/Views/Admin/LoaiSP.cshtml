@using QLMygear.Models
@using PagedList.Mvc;
@model PagedList.PagedList<QLMygear.Models.LOAISP>
@{
    ViewBag.Title = "LoaiSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .section {
        padding-left: 10px;
        padding-right: 10px;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        padding-top: 120px;
    }

    td {
        font-size: 14px;
    }
</style>
<body>
    <section class="section" id="products">
        <h2>QUẢN LÝ THÔNG TIN NHÃN HIỆU</h2>
        <table class="table">
            <tr>
                <th>Mã nhãn hiệu</th>
                <th>Tên nhãn hiệu</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a>NH0</a>@Html.DisplayFor(modelItem => item.MaLSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLSP)
                        )
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "SuaNH", new { id = item.MaLSP }) |
                        @Html.ActionLink("Xóa", "XoaNH", new { id = item.MaLSP })
                    </td>
                </tr>
            }
        </table>
        <div class="col-lg-12">
            <div class="pagination">
                <ul>
                    <li>
                        Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
                    </li>
                    <li>
                        @Html.PagedListPager(Model, page => Url.Action("SPtheoLoaiSP", new { page = page }))
                    </li>
                </ul>
            </div>
        </div>
    </section>
</body>
