
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<table align="center">
    <h3 style="text-align:center">ĐĂNG NHẬP</h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true);
        <tr style="height:40px;">
            <td>Tên đăng nhập:</td>
            <td>
                <input type="text" placeholder="Tên đăng nhập" @Html.TextBox("TenDN")
                       @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                <input type="password" placeholder="Mật khẩu" @Html.Password("MatKhau")
                       @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <span class="txt1">
                    Chưa có tài khoản?
                </span>
                <a class="txt2" href="/NguoiDung/DangKy">
                    Đăng ký
                </a>
            </td>
        </tr>



    }
</table>

