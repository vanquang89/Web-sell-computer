@using QLMygear.Models
@using PagedList.Mvc
@model PagedList.PagedList<SANPHAM>

@{
    ViewBag.Title = "Collection";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3 style="text-align:center; color:red">Danh sách sản phẩm</h3>
<body>
    <section class="section" id="products">

        <div class="container">
            <div class="row">
                @if (Model != null)
                {
                    foreach (var sp in Model)
                    {
                        <div class="col-lg-4">
                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-content">
                                        <ul>
                                            <li><a href="@Url.Action("Details", "Mygear", new { id = sp.MaSP})"><i class="fa fa-eye"></i></a></li>
                                            <li><a href="@Url.Action("Details", "Mygear", new { id = sp.MaSP})"><i class="fa fa-star"></i></a></li>
                                            <li><a href="@Url.Action("Details", "Mygear", new { id = sp.MaSP})"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <a href="@Url.Action("Details", "Mygear", new { id = sp.MaSP})">
                                        <img src="~/image/@sp.Anhbia" alt="@sp.TenSP">
                                    </a>
                                </div>
                                <div class="down-content">
                                    <h3 style="margin-top:5px; font-size: 20px;">@sp.TenSP</h3>
                                    <span>@String.Format("{0:0,0}", sp.Giaban) VNĐ</span>
                                    <ul class="stars">
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-lg-12">
            <div class="pagination">
                <ul>
                    <li>
                        Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
                    </li>
                    <li>
                        @Html.PagedListPager(Model, page => Url.Action("SPtheoLSP", new { page = page }))
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- ***** New - in End ******-->
</body>