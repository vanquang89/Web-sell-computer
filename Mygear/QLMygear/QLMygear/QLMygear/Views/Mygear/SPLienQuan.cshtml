@using QLMygear.Models
@{
    ViewBag.Title = "SPLienQuan";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<body>
    <section class="section" id="products">
        <div class="container">
            <div class="row">
                        <h2 style="text-align: center;">Sản phẩm liên quan</h2>
            </div>

            <div class="row">
                @if (Model != null)
                {
                    foreach (var sp in Model)
                    {
                        <div class="col-lg-4">
                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-content">
                                        <ul>
                                            <li><a href="@Url.Action("Details", "Mygear", new { id = sp.MaSP})"><i class="fa fa-eye"></i></a></li>
                                            <li><a href="@Url.Action("Details", "Mygear", new { id = sp.MaSP})"><i class="fa fa-star"></i></a></li>
                                            <li><a href="@Url.Action("Details", "Mygear", new { id = sp.MaSP})"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <a href="@Url.Action("Details", "Mygear", new { id = sp.MaSP})">
                                        <img src="~/image/@sp.Anhbia" alt="@sp.TenSP" style="width:90%">
                                    </a>
                                </div>
                                <div class="down-content" style="padding-top: 20px; position: relative; z-index: 3; background-color: #fff;">
                                    <h3 style="margin-top:5px; font-size: 20px;">@sp.TenSP</h3>
                                    <span>@String.Format("{0:0,0}", sp.Giaban) VNĐ</span>
                                    <ul class="stars">
                                        <li style="display: inline"><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

        </div>
    </section>
</body>